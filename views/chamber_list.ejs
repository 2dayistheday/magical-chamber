    <!--[if lte IE 9]><link rel="stylesheet" href="/stylesheets/ie9.css" /><![endif]-->
    <!--[if lte IE 8]><link rel="stylesheet" href="/stylesheets/ie8.css" /><![endif]-->
</head>
<body class="landing">

<div id="page-wrapper">
    <!-- Header -->
    <header id="header">
        <h1 id="logo"><a href="/">Chamber</a></h1>
        <nav id="nav">
            <ul>
                <li><a href="/">Home</a></li>
                <li><button id="signoutBtn" class="button" onclick="location.href='/api/logout'">Sign Out</button></li>
            </ul>
        </nav>
    </header>

    <!-- Main -->
    <div id="main" class="wrapper style1">
        <div class="container">
            <header class="major">
                <h2>Chamber List</h2>
                <p>나의 체임버를 보고, 생성하고, 입장하고</p>
            </header>
            <div class="row 150%">
                <div class="3u 12u$(medium)">
                    <!-- Sidebar -->
                    <section id="sidebar">
                        <section>
                            <h3>My Profile</h3>
                            <a href="#" class="image fit"><img src="/images/pic01.jpg" alt="프로필 사진누락" /></a>
                            <p><%=profile[0].user_nickname%></p>
                            <p><%=profile[0].user_des%></p>
                            <a href="/users/profile">프로필 설정</a>
                        </section>
                        <hr />
                    </section>
                </div>

                <div class="8u$ 12u$(medium) important(medium)">
                    <!-- Content -->
                    <section id="content">
                        <div class="col-md-8">
                            <div class="panel panel-default">
                                <a href="/chamber/new">
                                    <div class="panel-heading">New Chamber</div></a>
                                <div class="panel-body">새로운 체임버 만들기</div>
                            </div>
                            <p></p>
                            <b>초대 챔버</b>
                            <%
                            for(var i=0;i<invitations.length;i++){
                            %>
                            <ul class="actions">
                                <li>
                                    <form action = "/chamber/room/<%=invitations[i].chamber_id%>/allow" method = "post">
                                        <%=invitations[i].chamber_name%> |
                                        <%=invitations[i].chamber_des%>
                                        <button type="submit">수락하기</button>
                                    </form>
                                </li>
                            </ul>
                            <%
                            }
                            %>
                            <p></p>
                            <b>현재 챔버</b>
                            <%
                                for(var i=0;i<chambers.length;i++){
                            %>
                            <div class="panel panel-default">
                                <a href="/chamber/room/<%=chambers[i].chamber_id%>">
                                    <div class="panel-heading"><%=chambers[i].chamber_name%></div>
                                </a>
                                <div class="panel-body"><%=chambers[i].chamber_des%></div>
                            </div>
                            <%
                                }
                            %>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer id="footer">
        <ul class="icons">
            <li><a href="https://github.com/2dayistheday/magical-chamber" class="icon alt fa-github"><span class="label">GitHub</span></a></li>
        </ul>
        <ul class="copyright">
            <li>&copy; Redpoint. All rights reserved.</li><li>Design: <a href="http://html5up.net">HTML5 UP</a></li>
        </ul>
    </footer>
</div>

<!-- Scripts -->
<script src="/javascripts/js/jquery.min.js"></script>
<script src="/javascripts/js/jquery.scrolly.min.js"></script>
<script src="/javascripts/js/jquery.dropotron.min.js"></script>
<script src="/javascripts/js/jquery.scrollex.min.js"></script>
<script src="/javascripts/js/skel.min.js"></script>
<script src="/javascripts/js/util.js"></script>
<!--[if lte IE 8]><script src="/javascripts/js/ie/respond.min.js"></script><![endif]-->
<script src="/javascripts/js/main.js"></script>


</body>
</html>
